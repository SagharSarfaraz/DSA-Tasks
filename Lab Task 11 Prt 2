//Lab Task 11 part 2
//Selection Sort
#include <iostream>
using namespace std;

int main() {
    int arr[5] = {5, 3, 4, 1, 2};
    int n = 5;

    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;

        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }

        int temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;
    }

    cout << "Sorted Array (Selection Sort): ";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";

    return 0;
}
