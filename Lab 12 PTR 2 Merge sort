//Lab Task 12 PTR 2
//Merge Sort
#include <iostream>
using namespace std;

void merge(int a[], int l, int m, int r) {
    int i = l, j = m + 1, k = l;
    int temp[5];

    while (i <= m && j <= r) {
        if (a[i] < a[j])
            temp[k++] = a[i++];
        else
            temp[k++] = a[j++];
    }

    while (i <= m)
        temp[k++] = a[i++];

    while (j <= r)
        temp[k++] = a[j++];

    for (int i = l; i <= r; i++)
        a[i] = temp[i];
}

void mergeSort(int a[], int l, int r) {
    if (l < r) {
        int m = (l + r) / 2;
        mergeSort(a, l, m);
        mergeSort(a, m + 1, r);
        merge(a, l, m, r);
    }
}

int main() {
    int a[5] = {5, 3, 4, 1, 2};

    mergeSort(a, 0, 4);

    cout << "Merge Sort Output: ";
    for (int i = 0; i < 5; i++)
        cout << a[i] << " ";

    return 0;
}
