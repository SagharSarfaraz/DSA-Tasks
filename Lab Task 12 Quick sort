//Lab Task 12 Quick sort
#include <iostream>
using namespace std;

void quickSort(int a[], int first, int last) {
    if (first < last) {
        int pivot = a[last];
        int i = first - 1;

        for (int j = first; j < last; j++) {
            if (a[j] < pivot) {
                i++;
                swap(a[i], a[j]);
            }
        }
        swap(a[i + 1], a[last]);

        quickSort(a, first, i);
        quickSort(a, i + 2, last);
    }
}

int main() {
    int a[5] = {5, 3, 4, 1, 2};

    quickSort(a, 0, 4);

    cout << "Quick Sort Output: ";
    for (int i = 0; i < 5; i++)
        cout << a[i] << " ";

    return 0;
}
